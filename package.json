    "npm-run-all2": "^6.2.0",
    "release-it": "^17.3.0",
    "rimraf": "^5.0.7",
    "rxjs": "^7.8.1",
    "sass": "^1.77.4",
    "servor": "^4.0.2",
    "sortablejs": "^1.15.2",
    "stream-browserify": "^3.0.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.3",
    "typescript": "~5.4.5",
    "zone.js": "~0.14.7"
  },
  "engines": {
    "node": ">=18.19.1"
  },
  "resolutions": {
    "caniuse-lite": "1.0.30001629",
    "semver": "^7.6.2"
  }
}
